---
const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Trendsetters', href: '/trendsetters' },
  { name: 'Star-Spotlight', href: '/star-spotlight' },
  { name: 'Fashion-Updates', href: '/fashion-updates' },
  { name: 'Gossip', href: '/gossip' },
  { name: 'Behind-Scenes', href: '/behind-scenes' }
]
---

<nav class="bg-gradient-to-r from-purple-900 to-pink-600 shadow-2xl">
  <div class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl md:text-3xl font-bold text-white hover:text-yellow-300 transition-colors duration-300">
        Celebrity Buzz Weekly
      </a>
      
      {/* Desktop Navigation */}
      <div class="hidden md:flex gap-1">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class="px-4 py-2 rounded-lg text-white font-medium hover:bg-black hover:bg-opacity-20 transition-all duration-300 transform hover:scale-105"
          >
            {link.name}
          </a>
        ))}
      </div>
      
      {/* Mobile Menu Button */}
      <button class="md:hidden text-white focus:outline-none">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
  </div>
  
  {/* Mobile Menu (Hidden by default) */}
  <div class="md:hidden bg-purple-800 hidden">
    <div class="container mx-auto px-4 py-3 flex flex-col gap-2">
      {navLinks.map((link) => (
        <a 
          href={link.href}
          class="px-4 py-3 text-white hover:bg-black hover:bg-opacity-20 rounded-lg transition-colors duration-300"
        >
          {link.name}
        </a>
      ))}
    </div>
  </div>
</nav>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  nav {
    box-shadow: 0 0 15px rgba(255, 0, 119, 0.7);
  }
  
  .mobile-menu-open {
    display: block !important;
  }
</style>