<footer class="bg-gradient-to-r from-purple-900 to-pink-700 text-white py-8">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-300 to-pink-400">
          Celebrity Buzz Weekly
        </h2>
        <p class="text-purple-200 mt-2">Your source for the hottest celebrity news</p>
      </div>
      
      <div class="flex space-x-6">
        <a href="#" class="text-white hover:text-pink-300 transition-colors duration-300">
          <i class="fab fa-facebook-f text-2xl"></i>
        </a>
        <a href="#" class="text-white hover:text-pink-300 transition-colors duration-300">
          <i class="fab fa-twitter text-2xl"></i>
        </a>
        <a href="#" class="text-white hover:text-pink-300 transition-colors duration-300">
          <i class="fab fa-instagram text-2xl"></i>
        </a>
        <a href="#" class="text-white hover:text-pink-300 transition-colors duration-300">
          <i class="fab fa-tiktok text-2xl"></i>
        </a>
        <a href="#" class="text-white hover:text-pink-300 transition-colors duration-300">
          <i class="fab fa-youtube text-2xl"></i>
        </a>
      </div>
    </div>
    
    <div class="border-t border-purple-700 mt-6 pt-6 text-center">
      <p class="text-purple-200">
        &copy; {new Date().getFullYear()} Celebrity Buzz Weekly. All rights reserved.
      </p>
    </div>
  </div>
  
  <script is:inline>
    // Add neon glow effect to social icons
    document.addEventListener('DOMContentLoaded', () => {
      const icons = document.querySelectorAll('footer a');
      icons.forEach(icon => {
        icon.addEventListener('mouseenter', () => {
          icon.style.textShadow = '0 0 10px #ff0077, 0 0 20px #ff0077';
        });
        icon.addEventListener('mouseleave', () => {
          icon.style.textShadow = 'none';
        });
      });
    });
  </script>
</footer>